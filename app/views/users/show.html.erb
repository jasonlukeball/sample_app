<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <!-- MICROPOSTS -->

  <div class="col-md-8">
    <% if @user.microposts.any? %>
        <!-- Microposts exist for this user, display a heading -->
        <h2>Microposts (<%= @user.microposts.count %>)</h2>
        <!-- Output Microposts -->
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
    <% end %>
  </div>


</div>
