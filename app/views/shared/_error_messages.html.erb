<% if object.errors.any? %>
    <div id="error_explanations">
        <div class="alert alert-danger">
          This form contains <%= pluralize(object.errors.count, 'error') %>
        </div>
        <ul>
          <% object.errors.full_messages.each do |error| %>
              <li><%= error %></li>
          <% end %>
        </ul>
    </div>
    <br/>
<% end %>


